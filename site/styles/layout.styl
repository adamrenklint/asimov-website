@import "colors.styl"

*
  margin: 0
  padding: 0

body
  text-align: center
  background-color: $lighter
  font-family: "Helvetica Neue","Helvetica","Arial",Sans-Serif
  color: $dark
  line-height: 1.4
  margin: 100px

  @media screen and (max-width: 600px)
    margin 40px

a
  color: $dark
  text-decoration: none
  font-weight: bold

  &:hover
    color: $darker

h1
  margin-top 15%
  margin-bottom 5%
  font-size 60px
  color $accent

  @media screen and (max-width: 600px)
    font-size 40px

.content
  font-size: 1.4em

.footer
  position: fixed
  bottom: 20px
  left: 0
  right: 0

pre
code
  background-color: #fff
  border: 1px solid #ddd
  font-size: 13px
  line-height: 19px
  overflow: auto
  padding: 6px 10px
  border-radius: 3px
  margin-bottom: 10px
  font-weight: normal

code
  padding:3px 5px
  margin:0

pre
  code
    background-color: #fff
    border: none
    font-size: inherit
    line-height: inherit
    padding: 0
    margin-bottom: 0