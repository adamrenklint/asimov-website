@import "colors.styl"
@import url("http://fonts.googleapis.com/css?family=Signika:400,600,700")

*
  margin: 0
  padding: 0

body
  text-align: center
  background-color: $lighter
  font-family: "Signika", "Helvetica Neue", "Helvetica", "Arial", Sans-Serif
  color: $dark
  line-height: 1.5
  font-size: 1.6em

.container
  margin: 100px auto
  max-width: 720px

  .content
    &.smaller
      max-width: 600px
      margin: 0 auto

  @media screen and (max-width: 600px)
    margin 40px

a
  color: $dark
  text-decoration: none
  font-weight: 600

  &:hover
    color: $darker

p
  margin-bottom: 20px

.logo
.logo a
.logo a:active
  margin-top 15%
  margin-bottom 5%
  font-size 60px
  font-weight 300
  color $accent

  .name
    font-weight: 700

  @media screen and (max-width: 600px)
    font-size 40px

ul
  list-style: none

.footer
  margin-top: 60px
  border-top: 1px solid $dark
  padding-top: 30px
  font-size: 1em

pre
code
  background-color: #fff
  border: 1px solid #ddd
  font-size: 13px
  line-height: 19px
  overflow: auto
  padding: 6px 10px
  border-radius: 3px
  margin-bottom: 10px
  font-weight: normal

code
  padding:3px 5px
  margin:0

pre
  code
    background-color: #fff
    border: none
    font-size: inherit
    line-height: inherit
    padding: 0
    margin-bottom: 0